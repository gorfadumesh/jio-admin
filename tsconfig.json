{
  "compilerOptions": {
    "typeRoots": ["node_modules/@types", "src/types"],
    "target": "es2016",
    "lib": ["dom", "dom.iterable", "esnext", "es2015.iterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false, // Disables all strict type checking options
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "noImplicitAny": false, // Allows variables with implicit 'any' type
    "noImplicitThis": false, // Allows 'this' expressions with an implicit 'any' type
    "strictNullChecks": false, // Disables strict null checks
    "downlevelIteration": true,
    "baseUrl": "src",
    "paths": {
      "@assets/*": ["./src/assets/*"]
    }
  },
  "include": ["./src"],
  "exclude": ["node_modules"]
}
